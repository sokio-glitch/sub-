name: Build LobeChat

on:
  workflow_dispatch:   # 手动触发
  push:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup pnpm
        uses: pnpm/action-setup@v2
        with:
          version: 8

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: 18
          cache: 'pnpm'

      - name: Install dependencies
        run: pnpm install

      - name: Build
        run: pnpm build

      - name: Compress build output
        run: |
          zip -r lobe-chat-build.zip .next public package.json pnpm-lock.yaml

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: lobe-chat-build
          path: lobe-chat-build.zip
